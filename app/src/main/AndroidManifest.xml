<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jorge.inmobiliaria2025">

    <!-- ðŸŒ Permisos de red y ubicaciÃ³n -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ðŸ”” Permiso requerido desde Android 13+ para notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- â˜Žï¸ Permiso para llamadas telefÃ³nicas -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".InmobiliariaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inmobiliaria_2025"
        android:networkSecurityConfig="@xml/network_security_config"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">

        <!-- ðŸŒ WebView segura -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" />

        <!-- ðŸ—ºï¸ Clave API Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBaeLBuSlsO3PQqtVi-QK1fsMEQOC1jy_c" />

        <!-- ðŸ”¹ LOGIN - Pantalla inicial -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">

            <!-- ðŸš€ Lanzador -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- ðŸŒ DEEP LINK para reset-password -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Acepta enlaces enviados en el correo -->
                <data
                    android:scheme="http"
                    android:host="192.168.1.36"
                    android:port="5027"
                    android:pathPrefix="/api/Propietarios/reset-password" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ MenÃº principal -->
        <activity
            android:name=".ui.nav.MainActivity"
            android:exported="true" />

        <!-- ðŸ”” Servicio de notificaciones Firebase -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- ðŸ”‘ ConfiguraciÃ³n FCM -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="pagos_channel" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />

    </application>
</manifest>
