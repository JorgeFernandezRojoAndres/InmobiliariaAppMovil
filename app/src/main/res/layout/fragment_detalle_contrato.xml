<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvIdContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrato #"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvFechasDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2024 → 01/01/2025"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMontoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvEstadoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Vigente"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Pagos"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="12dp"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- ✅ BOTÓN NUEVO: Volver a contratos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverContratos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver a contratos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="12dp"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
