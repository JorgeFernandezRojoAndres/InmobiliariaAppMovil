<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🖼 Imagen del inmueble -->
        <ImageView
            android:id="@+id/ivInmueble"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/direccion_label"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- 📋 Contenedor de datos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 🏠 Dirección -->
            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/direccion_label"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:importantForAccessibility="yes" />

            <!-- 💰 Precio -->
            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio_default"
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:importantForAccessibility="yes" />

            <!-- 🔘 Switch de disponibilidad -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swDisponible"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:text="@string/disponible_label"
                android:checked="true"
                android:textColor="#444444"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="yes" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
