<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/white">

    <!-- ðŸ”¹ TÃ­tulo -->
    <TextView
        android:id="@+id/tvTituloContratos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Contratos"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- ðŸ”¹ Mensaje o placeholder -->
    <TextView
        android:id="@+id/tvMensajeContratos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AquÃ­ se mostrarÃ¡n los contratos del propietario."
        android:textSize="16sp"
        android:textColor="@color/purple_700"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- ðŸ”¹ RecyclerView para listar contratos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContratos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_contrato" />

</LinearLayout>
