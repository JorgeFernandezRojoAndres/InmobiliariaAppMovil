<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContrato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🏠 Dirección del inmueble -->
        <TextView
            android:id="@+id/tvDireccionContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <!-- 📅 Fechas del contrato -->
        <TextView
            android:id="@+id/tvFechasContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2024 → 01/01/2025"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />

        <!-- 💰 Monto mensual -->
        <TextView
            android:id="@+id/tvMontoContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100000"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />

        <!-- 📋 Estado del contrato (nuevo) -->
        <TextView
            android:id="@+id/tvEstadoContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Vigente"
            android:textColor="@color/teal_700"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
