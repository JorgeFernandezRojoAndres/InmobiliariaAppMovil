<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_recuperar_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@drawable/glass_box"
    tools:context=".ui.login.RecuperarPasswordFragment">

    <!-- 游댳 T칤tulo -->
    <TextView
        android:id="@+id/tvTituloRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restablecer contrase침a"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp" />

    <!-- 游댳 Campo nueva contrase침a -->
    <EditText
        android:id="@+id/etNuevaClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva contrase침a"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="#BFD8E6"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="16dp"
        tools:ignore="Autofill" />

    <!-- 游댳 Campo confirmar contrase침a -->
    <EditText
        android:id="@+id/etConfirmarClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar contrase침a"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="#BFD8E6"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="24dp"
        tools:ignore="Autofill" />

    <!-- 游댳 Bot칩n guardar -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restablecer contrase침a"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_700"
        android:textAllCaps="false"
        android:padding="12dp" />

</LinearLayout>
