<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgAvatarInquilino"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_person"
            android:layout_marginBottom="16dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del Inquilino"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Completo:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNombreInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDniInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TelÃ©fono:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTelefonoInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmailInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:paddingBottom="20dp" />

        <!-- Nueva ImageView para mostrar la imagen del inmueble -->
        <ImageView
            android:id="@+id/imgInmueble"
            android:layout_width="match_parent"
            android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_image_placeholder"
        android:contentDescription="Imagen del Inmueble" />

    </LinearLayout>
</ScrollView>
