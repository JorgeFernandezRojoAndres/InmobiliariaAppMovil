<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo semitransparente (ligeramente más visible) -->
    <solid android:color="#26FFFFFF" />

    <!-- Borde con el mismo color base pero más suave -->
    <stroke
        android:width="2dp"
        android:color="@color/purple_700" />

    <!-- Bordes redondeados uniformes -->
    <corners android:radius="12dp" />

    <!-- Pequeña sombra interna para dar relieve -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
