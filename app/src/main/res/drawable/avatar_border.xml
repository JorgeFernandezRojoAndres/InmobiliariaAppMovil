<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fondo transparente -->
    <solid android:color="@android:color/transparent" />

    <!-- Borde morado -->
    <stroke
        android:width="3dp"
        android:color="@color/purple_500" />

    <!-- Margen interno para que no corte la imagen -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
