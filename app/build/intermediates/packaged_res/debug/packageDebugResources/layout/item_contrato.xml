<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContrato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ  DirecciÃ³n -->
        <TextView
            android:id="@+id/tvDireccionContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n del inmueble"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <!-- ðŸ“… Fechas -->
        <TextView
            android:id="@+id/tvFechasContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2024 â†’ 01/01/2025"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />

        <!-- ðŸ’° Monto -->
        <TextView
            android:id="@+id/tvMontoContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100000"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />

        <!-- â­ Estado (badge) -->
        <TextView
            android:id="@+id/tvEstadoContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vigente"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_estado_badge"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
